{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    // "jsx": "react",
    // "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
  },
  "include": [
    "src/server"
  ]
}